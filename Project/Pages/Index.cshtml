@page "{searchString?}"
@model WebApp.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>WebApp</title>
    <style>
        table,
        th,
        td {
            border: thin black solid
        }

        .buttons {
            padding: 1rem;

            display: flex;
            flex-direction: row;

        }

        a {
            margin: 10px;
        }
        .form1 {
            display: flex;
            width: 30%;
            margin: 10px;
            flex-direction: row;
            
            
        }
    </style>
</head>

<body>
    <h1>@ViewData["Album"]</h1>
    <a asp-page="CreateAlbum" class="btn btn-secondary">Create an Album</a>



    <form method="get" class="form1">
      
        <div class="input-group">
            <input class="form-control" asp-for="SearchTerm" placeholder="Search for Album name" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>



    <table class="table table-striped table-dark">
        <tr>

            <th scope="col">Album</th>
            <th scope="col">Artist</th>
            <th scope="col"> </th>

        </tr>
        @foreach (var q in Model.queryResults)
        {
            <tr>

                <td>@q.Title</td>
                <td>@q.ArtistName</td>
                <td class="buttons">
                    <a asp-page="Details" asp-route-id="@q.AlbumId" class="btn btn-info">Details</a>
                    <a asp-page="Update" asp-route-id="@q.AlbumId" class="btn btn-light">Update</a>
                    <a asp-page="Delete" asp-route-id="@q.AlbumId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </table>
</body>

</html>