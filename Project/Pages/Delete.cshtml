@page
@model Matt.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Album @Html.DisplayFor(model => model.Album.Title)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.AlbumId)
            @Html.DisplayFor(model => model.Album.AlbumId)

        </dt>
        <dd class="col-sm-10">

            @Html.DisplayFor(model => model.Album.Artist.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.Title)
            @Html.DisplayFor(model => model.Album.Title)
        </dt>
    </dl>
    <p>Tracks:</p>
    <ol>
        @foreach (var q in Model.Album.Tracks)
        {
            <li>@Html.DisplayFor(modelItem => q.Name)</li>
        }
    </ol>

    <form method="post">
        <input type="hidden" asp-for="Album.AlbumId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
