@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Matt.EditModel

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>WebApp</title>
    <style>
        table,
        th,
        td {
            border: thin black solid
        }

        .buttons {
            padding: 1rem;
            margin: 10px;
            display: flex;
            flex-direction: row;

        }

        a {
            margin: 10px;
        }
    </style>
</head>

<body>
    <h1>Update</h1>

    <h4>Album</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
           <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Album.AlbumId" />
            <div class="form-group">
                <label asp-for="Album.Title" class="control-label"></label>
                <input asp-for="Album.Title" class="form-control" />
                <span asp-validation-for="Album.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.ArtistId" class="control-label">Artist</label>
                <select asp-for="Album.ArtistId" class="form-control" asp-items="ViewBag.ArtistId"></select>
                <span asp-validation-for="Album.ArtistId" class="text-danger"></span>
            </div>
            <p>Tracks:</p>
                <ol>
                @foreach (var item in Model.Album.Tracks)
                {
                    
                    <li>@Html.TextBoxFor(modelItem => item.Name)
                        <input type="hidden" name="item.TrackId" value="@item.TrackId">
                    </li>
                   
                }
                </ol>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        </div>
    </div>

</body>

</html>